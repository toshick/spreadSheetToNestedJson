{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2015", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "sourceMap": true,

    "experimentalDecorators": true,
    "rootDir": "./",
    "baseUrl": "./",
    "outDir": "./build",
    "paths": {
      "~/*": ["./src/*"],
      "@/*": ["./src/*"]
    }
  }
}
